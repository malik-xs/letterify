{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"settings": {
		"react": {
		  "createClass": "createReactClass", // Regex for Component Factory to use,
											 // default to "createReactClass"
		  "pragma": "React",  // Pragma to use, default to "React"
		  "fragment": "Fragment",  // Fragment to use (may be a property of <pragma>), default to "Fragment"
		  "version": "detect", // React version. "detect" automatically picks the version you have installed.
							   // You can also use `16.0`, `16.3`, etc, if you want to override the detected value.
							   // default to latest and warns if missing
							   // It will default to "detect" in the future
		  "flowVersion": "0.53" // Flow version
		}
	},
	"globals": {
		"jQuery": "readonly",
		"elementor": "readonly",
		"elementorFrontend": "readonly",
		"bodymovin": "readonly",
		"ElementsKit_Helper": "readonly",
		"wc_add_to_cart_params": "readonly",
		"mf": "readonly",
		"React": "readonly",
		"ReactDOM": "readonly",
		"grecaptcha": "readonly",
		"letterify_admin_var": "readonly",
		"htm": "readonly",
		"StripeCheckout": "readonly",
		"wp": true,
		"wpApiSettings": true,
		"wcSettings": true,
		"es6": true
	},
	"rules": {
		"camelcase": 0,
        "no-nested-ternary": 0,
        "jsdoc/require-param-type": 0,
		"no-alert": 0,
		"vars-on-top": 0,
		"indent": [
			"error",
			"tab"
		],
		"max-len": [
			2,
			{ "code": 150 }
		],
		"no-console": 1,
		"linebreak-style": ["error", "windows"]
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"extends": [
		"plugin:@wordpress/eslint-plugin/es5",
		// "plugin:@wordpress/eslint-plugin/esnext",
		// "plugin:@wordpress/eslint-plugin/jsdoc",
		// "plugin:@wordpress/eslint-plugin/i18n",
		"plugin:@wordpress/eslint-plugin/react"
	]
}